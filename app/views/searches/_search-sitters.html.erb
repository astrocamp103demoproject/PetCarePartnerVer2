
<div class="search-sitters" id="sitters-content">
    <% if sitters.empty?%>
        <h1>找不到搜尋結果</h1> 
    <% else %>
        <% sitters.each do |sitter|%>
            <div class="sitter-item" id="<%=sitter.id%>">
                <% if sitter.email.include?("@example.com")  %>
                    <div class="item-pic"><img src=<%= find_avatar(sitter.id)%>></div>
                <% else %>
                    <div class="item-pic"><img src=<%=sitter.avatar%>></div>
                <% end %>
                
                <div class="item-sitter-info">
                    <div class="item-sitter-name"><%=sitter.name%></div>
                    <div class="item-sitter-address"><%=sitter.address%></div>
                    <div class="item-sitter-slogan"><%=sitter.slogan%></div>
                </div>        
                <div class="item-price">
                    <p class='per-price'>$<%=sitter.price%></p>
                    <p>per night</p>
                    <%= link_to '查看褓姆',sitter_path(sitter), class: 'btn' %>
                </div>
            </div>
        <%end%>
        <%= paginate sitters, outer_window: 3  %> 
    <%end%>
    
    
</div>