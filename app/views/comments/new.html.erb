<%= simple_form_for([@sitter, @comment]) do |form| %>
  <%= form.input :sitter_id, as: :hidden, input_html: {value: @sitter.id} %>
  <%= form.input :user_id, as: :hidden, input_html: {value: current_user.id} %>
  <%= content_tag(:p, "#{Time.now.to_date}")%>
  <%= content_tag(:p, "#{@current_user.name}")%>
  <%= form.input :message, label: "給#{@sitter.name}的評價" %>
  <%= form.submit '送出', class: 'btn' %>
<% end %>


 