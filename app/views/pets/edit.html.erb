<h1>Edit <%= @pet.name %>'s Profile</h1>
  <%= simple_form_for([current_user, @pet]) do |f| %> 
      <%= f.input :pic %>
      <%= f.input :name, label: '寵物名' %>
      <%= f.input :size, label: '體重', placeholder: '公斤' %>
      <%= f.input :age, label: '年齡', placeholder: '歲' %>
      
      <%= f.input :breed, label: '品種' %>
      
      <%= f.input :note %>
  
      <%= f.submit '更新', class: 'btn btn-success'%>
  <% end %>