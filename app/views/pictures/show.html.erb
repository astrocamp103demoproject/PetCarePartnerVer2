<div class="show-pic-wrap" >
    <%if @sitter.name == current_user.name%>
        <span>
            <%= link_to '回圖片集', sitter_pictures_path(@sitter), class: 'add-symbol' %>
        </span>
    <%end%>
    <div class="show-pic">
                  
        <%if @picture == nil %>
            <div class="h1">已經沒有圖片囉</div>
        <%else%>
            <%= link_to '上一張',sitter_picture_path(@sitter,params[:id].to_i-1), class: 'add-symbol' %> 
            <%= image_tag @picture.pic.url %>
            <%= link_to '下一張',sitter_picture_path(@sitter,params[:id].to_i+1), class: 'add-symbol' %>     
        <%end%>
                
    </div>
    
    
</div>