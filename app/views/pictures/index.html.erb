<div class="index-pictures-wrap" >
  <h3>圖片集</h3>
  <%if @sitter.name == current_user.name%>
      <span>
          <%= link_to '加入更多照片', new_sitter_picture_path(@sitter), class: 'add-symbol' %>
      </span>
  <%end%>
  <div class="index-pic-wrap">
      <% @sitter.pictures.each do |picture|%>
          <div class="index-pic">
              <%= link_to image_tag("#{picture.pic.thumb.url}"),sitter_picture_path(@sitter,picture
              ), class: 'add-symbol' %>                
          </div>
      <%end%>
  </div>
  
        
</div>