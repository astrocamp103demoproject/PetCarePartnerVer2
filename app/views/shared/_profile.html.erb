<div class="avatar">
  <img src="<%= profile.avatar %>" alt="" class="avatar-img">
</div>
<div class="info">
  <%= content_tag(:h3, profile.name) %>
  <%= content_tag(:p, profile.address) if profile == @sitter %>
  <%= content_tag(:p, profile.email) %>
  <%= content_tag(:p, profile.slogan) if profile == @sitter %>
  <%= content_tag(:p, "$ #{profile.price} /每晚") if profile == @sitter %>
</div>
<hr>
<div class="pic">
  <h3>圖片集</h3>
    <img src="<%= profile.pic %>" alt="">
</div>
<div class="square">
<hr>
  <%= content_tag(:p, "空間坪數： #{profile.square_meters} 平方公尺") if profile == @sitter %>
  <%= content_tag(:p, "最大收容數： #{profile.pet_limit} 隻") if profile == @sitter %>
</div>
<div class="comment">
  <%= content_tag(:h3, '留言板') if profile == @sitter %>
  <%= render 'shared/comment' if profile == @sitter %>
</div>